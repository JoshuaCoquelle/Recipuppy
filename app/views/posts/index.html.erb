<h1>Recipes</h1>

<% @posts.each do |post| %>
<div class="well">
  <h3><%= post.title %></h3>
  Summary: <p><%= post.description %></p>
  Recipe: <p><%= post.ingredients %></p>
  Potential Allergens: <p><%= post.potential_allergens%></p>
  <div class="pull-right">  
    <%= link_to "Comment |" %>
    <%= link_to "Show |", post_path(post) %>
    <%= link_to "Like |" %>
    <%= link_to "Favorite |" %>
    <%= link_to "Danger" %>
  </div>
</div>
<% end %>