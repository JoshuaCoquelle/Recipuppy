<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label      :title  %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label     :description, "Summary" %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label     :ingredients %>
    <%= f.text_area :ingredients%>
  </div> 

  <div class="form-group">
    <%= f.label     :potential_allergens %>
  </div><%= f.text_area :potential_allergens%>

  <div>
    <%= f.submit "Submit Recipe" %>
  </div>
<% end %>
