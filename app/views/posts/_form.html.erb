<%= form_for @post do |f| %>
  <div class="form-group">
    <p><%= f.label      :title  %></p>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="form-group">
    <p><%= f.label     :description, "Summary" %></p>
    <p><%= f.text_area :description %></p>
  </div>

  <div class="form-group">
    <p><%= f.label     :ingredients %></p>
    <p><%= f.text_area :ingredients%></p>
  </div> 

  <div class="form-group">
    <p><%= f.label     :potential_allergens %></p>
    <p><%= f.text_area :potential_allergens%></p>
  </div>
</p>
  <div>
    <%= f.submit "Submit Recipe", class: "btn btn-primary" %>
  </div>
<% end %>
