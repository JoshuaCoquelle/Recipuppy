<% @post.comments.each do |comment| %>
  <p id="commentDiv"><%= comment.body %></p>
  <% if current_user == comment.user %>
    <span class="pull-right"><%= link_to "Delete Comment", [@post, comment] , method: :delete, data: {confirm: "Are You   Sure?"}, class: "btn btn-danger btn-sm" %>
    </span>
  <% end %>

<p id="usernameComment">Posted by: <%= comment.user.first_name %></p>                
<hr>
<% end %>