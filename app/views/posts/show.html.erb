<h1><%= @post.title %></h1>

<strong>Summary:</strong
<p><%= @post.description %></p>
<strong>Ingredients:</strong>
<p><%= @post.ingredients %></p>
<strong>Potential Allergens:</strong>
<p><%= @post.potential_allergens %></p>

<% if @post.liked_by?(current_user) %>
<%= link_to "<i class= 'glyphicon glyphicon-thumbs-down'></i>".html_safe, [@post, @like], method: :delete %>
<% else %>                    
<%= link_to "<i class= 'glyphicon glyphicon-thumbs-up'></i>".html_safe, [@post, Like.new], method: :post %>
<% end %>

<%= form_for [@post, @comment] do |f| %>
<div class="form-group">
  <%= f.label :comment %>
  <p><%= f.text_area :body, :size => "100x5", placeholder: "Share Your Comments!" %></p>
</div>

<div>
  <p><%= f.submit "Add Comment", class: "btn btn-primary" %></p>
</div>
<% end %>

<div class="well">
  <% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <%= link_to "Delete Comment", [@post, comment] , method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-danger" %>
    <hr>
  <% end %>
</div>
