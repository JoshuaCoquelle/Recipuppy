<h1><%= @post.title %></h1>

<strong>Summary:</strong
<p><%= @post.description %></p>
<strong>Ingredients:</strong>
<p><%= @post.ingredients %></p>
<strong>Potential Allergens:</strong>
<p><%= @post.potential_allergens %></p>

<%= form_for [@post, @comment] do |f| %>
<div class="form-group">
  <%= f.label :comment %>
  <p><%= f.text_area :body, :size => "100x5", placeholder: "Share Your Comments!" %></p>
</div>

<div>
  <p><%= f.submit "Add Comment", class: "btn btn-primary" %></p>
</div>
<% end %>

<div class="well">
  <% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <%= link_to "Delete Comment", [@post, comment] , method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-danger" %>
    <hr>
  <% end %>
</div>
