<!DOCTYPE html>
<html>
<head>

  <title>Recipuppy | Join the community.</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" id="brandText">Recipuppy</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav" id="navText">
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Profile", profile_path(current_user) %> </li>
          <% elsif user.profile.!exist %>
            <%= link_to "Profile", new_profile_path %>
          <% end %>
          <li class="dropdown">
          <li><%= link_to "Recipes", posts_path %></li>
          <li><a href="#">Top</a>
          </ul>
        </li>
      </ul>
  
      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
        <!-- <strong><%= current_user.email %></strong> -->
        <%= link_to 'Edit profile', edit_profile_path(current_user), class: "btn btn-default", id: "editProButton" %> 
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link', class: "btn btn-default", id: "logoutButton" %>
        <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link', class: "btn btn-default", id: "editProButton"  %> 
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link', class: "btn btn-default", id: "editProButton"  %>
        <% end %>
      </p>
  </nav>

  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    
  <div class="container-fluid" <%= yield(:gradient) %> >   
    <%= yield %>
  </div>
</body>
</html>
